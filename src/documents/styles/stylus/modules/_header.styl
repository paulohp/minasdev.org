@import '../_global.styl'

.header 
  position relative
  width 100%
  overflow visible 
  height 235px
    
  .header-bar
    position relative
    margin 0
    height 63px
    background #313131

  .header-logo
    position absolute
    width 139px
    height 139px
    margin 24px 0 0 0
    top 0
    left 0
    background-position -10px -10px
    
    .header-logo-link
      width 139px
      height 139px
      display block
      hide-text()

  .header-slogan
    position absolute
    top 120px
    left 165px

  .header-menu
    position absolute
    margin 0
    padding 0
    top 24px
    left 165px
    color #989898

  .header-menu li
    display block
    float left
    margin-right 23px

  .header-search
    width 205px
    height 30px
    position absolute
    top 18px
    right 0px

