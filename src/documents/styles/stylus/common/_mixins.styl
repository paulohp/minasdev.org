hide-text()
	text-indent -99999px 
	font-size 0 


// grid

container()
	margin-left auto 
	margin-right auto 
	width $grid-width 
	max-width grid-max
	position relative

grid-width(n, cols, gutter-width) 
	width ($grid-width / cols * n - gutter-width)


grid-base(gutter-width) 
	display inline
	float left
	margin-left (gutter-width / 2)%
	margin-right (gutter-width / 2)%


grid(n, cols = grid-columns, gutter-width = grid-gutter-width) 
	grid-base(gutter-width)
	grid-width(n, cols, gutter-width)